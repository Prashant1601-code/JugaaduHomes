<%- include('../partials/head') %>
</head>
<body class="min-h-screen bg-gray-50">
    <%- include('../partials/nav') %>
    
    <main class="container mx-auto px-4 py-8">
        <!-- Hero Section -->
        <div class="text-center mb-12">
            <h1 class="text-4xl font-extrabold mb-4 text-transparent bg-clip-text bg-gradient-to-r from-red-500 to-pink-600">
                Welcome to JugaadHomes
            </h1>
            <p class="text-gray-600 text-lg mb-8">Discover unique stays around the world</p>
            
            
        </div>

        <!-- Properties Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
            <% registeredHomes.forEach(home => { %>
                <div class="bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 border border-gray-200">
                    <!-- Property Image -->
                    <div class="relative h-64">
                        <img 
                            src="<%= home.image %>" 
                            alt="<%= home.houseName %>" 
                            class="w-full h-full object-cover"
                        />
                        <!-- Rating Badge -->
                        <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm px-3 py-1 rounded-full shadow-md">
                            <span class="flex items-center text-gray-700">
                                <svg class="w-4 h-4 text-yellow-400 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                                </svg>
                                <%= home.rating %>
                            </span>
                        </div>
                    </div>

                    <!-- Property Details -->
                    <div class="p-6">
                        <h3 class="text-xl font-bold text-gray-900 mb-4"><%= home.houseName %></h3>
                        
                        <!-- Location -->
                        <div class="flex items-center text-gray-600 mb-3">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                            </svg>
                            <%= home.location %>
                        </div>

                        <!-- Price -->
                        <div class="flex items-center justify-between mb-6">
                            <div class="flex items-center text-gray-600">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12H9m3-3c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                                <span class="font-semibold">â‚¹<%= home.price %></span>&nbsp;/&nbsp;night
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="flex items-center justify-between">
                            <a href="/bookings/<%= home._id %>" 
                               class="w-full bg-gradient-to-r from-red-500 to-pink-600 text-white py-2 rounded-lg font-medium
                                      hover:from-red-600 hover:to-pink-700 transition-all duration-300 
                                      transform hover:scale-[1.02] active:scale-95 text-center">
                                Book Now
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

        <!-- Empty State -->
        <% if (registeredHomes.length === 0) { %>
            <div class="text-center py-16">
                <svg class="w-20 h-20 text-gray-400 mx-auto mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                </svg>
                <h3 class="text-2xl font-semibold text-gray-700 mb-3">No properties available</h3>
                <p class="text-gray-500">Check back later for new listings!</p>
            </div>
        <% } %>
    </main>
</body>
</html>