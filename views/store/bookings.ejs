<%- include('../partials/head') %>
</head>
<body class="min-h-screen bg-gray-50">
  <%- include('../partials/nav') %>
  <main class="container mx-auto px-4 py-8">
    <% if (locals.home) { %>
      <!-- Booking Form -->
      <div class="max-w-2xl mx-auto bg-white rounded-xl shadow-lg p-6">
        <h2 class="text-2xl font-bold mb-6">Book <%= home.houseName %></h2>
        <% if (locals.error) { %>
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline"><%= error %></span>
          </div>
        <% } %>
        <form action="/bookings/create" method="POST" class="space-y-4" id="bookingForm">
          <input type="hidden" name="homeId" value="<%= home._id %>">
          
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Check-in Date</label>
              <input type="date" 
                     name="checkIn" 
                     required 
                     min="<%= minDate %>"
                     id="checkInDate"
                     onchange="updateCheckoutMin()"
                     class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-red-500">
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Check-out Date</label>
              <input type="date" 
                     name="checkOut" 
                     required 
                     min="<%= minDate %>"
                     id="checkOutDate"
                     class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-red-500">
            </div>
          </div>

          <div class="mt-6">
            <p class="text-gray-600 mb-2">Price per night: ₹<%= home.price %></p>
          </div>

          <button type="submit" 
                  class="w-full bg-gradient-to-r from-red-500 to-pink-600 text-white py-3 rounded-lg
                         hover:from-red-600 hover:to-pink-700 transition-all duration-300">
            Confirm Booking
          </button>
        </form>
      </div>
      <script>
        function updateCheckoutMin() {
          const checkInInput = document.getElementById('checkInDate');
          const checkOutInput = document.getElementById('checkOutDate');
          
          // Set minimum checkout date to day after checkin
          const checkInDate = new Date(checkInInput.value);
          const minCheckoutDate = new Date(checkInDate);
          minCheckoutDate.setDate(minCheckoutDate.getDate() + 1);
          
          checkOutInput.min = minCheckoutDate.toISOString().split('T')[0];
          
          // Reset checkout date if it's now invalid
          if(new Date(checkOutInput.value) <= checkInDate) {
            checkOutInput.value = '';
          }
        }
      </script>
    <% } else if (locals.bookings) { %>
      <!-- Bookings List -->
      <h2 class="text-3xl font-bold text-center mb-8">My Bookings</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% bookings.forEach(booking => { %>
          <div class="bg-white rounded-xl shadow-lg p-6" id="booking-card-<%= booking._id %>">
            <img src="<%= booking.homeId.image %>" 
                 alt="<%= booking.homeId.houseName %>" 
                 class="w-full h-48 object-cover rounded-lg mb-4">
            <h3 class="text-xl font-bold mb-2"><%= booking.homeId.houseName %></h3>
            <p class="text-gray-600 mb-2">
              Check-in: <%= booking.checkIn.toLocaleDateString() %>
            </p>
            <p class="text-gray-600 mb-4">
              Check-out: <%= booking.checkOut.toLocaleDateString() %>
            </p>
            <p class="text-lg font-semibold text-red-500">
              Total Price: ₹<%= booking.totalPrice %>
            </p>
            
            <button 
              onclick="cancelBooking('<%= booking._id %>')"
              class="w-full mt-4 bg-red-100 text-red-600 py-2 rounded-lg 
                     hover:bg-red-200 transition-colors duration-300"
              id="cancel-btn-<%= booking._id %>">
              Cancel Booking
            </button>
          </div>
        <% }) %>
      </div>

      <script>
        async function cancelBooking(bookingId) {
          try {
            if (!confirm('Are you sure you want to cancel this booking? This action cannot be undone.')) {
              return;
            }

            const button = document.getElementById(`cancel-btn-${bookingId}`);
            button.disabled = true;
            button.textContent = 'Cancelling...';

            const response = await fetch(`/bookings/${bookingId}/cancel`, {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json'
              }
            });

            const data = await response.json();

            if (response.ok) {
              // Remove the booking card from UI
              const bookingCard = document.getElementById(`booking-card-${bookingId}`);
              bookingCard.remove();

              // Show success message
              alert('Booking cancelled and deleted successfully');
              
              // If no more bookings, show empty state
              const bookingsContainer = document.querySelector('.grid');
              if (!bookingsContainer.children.length) {
                bookingsContainer.innerHTML = `
                  <div class="col-span-full text-center py-8">
                    <p class="text-gray-500">No bookings found</p>
                  </div>
                `;
              }
            } else {
              throw new Error(data.message || 'Failed to cancel booking');
            }
          } catch (error) {
            alert(error.message);
            // Reset button state
            const button = document.getElementById(`cancel-btn-${bookingId}`);
            button.disabled = false;
            button.textContent = 'Cancel Booking';
          }
        }
      </script>
    <% } %>
  </main>
</body>
</html>